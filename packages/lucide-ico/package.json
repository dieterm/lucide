{
  "name": "lucide-ico",
  "description": "Lucide icons in ICO format for Windows applications.",
  "version": "0.0.1",
  "license": "ISC",
  "homepage": "https://lucide.dev",
  "bugs": "https://github.com/lucide-icons/lucide/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucide-icons/lucide.git",
    "directory": "packages/lucide-ico"
  },
  "keywords": [
    "Lucide",
    "Icons",
    "ICO",
    "Windows",
    "Favicon"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm copy:license && pnpm build:icons",
    "copy:license": "node -e \"require('fs').copyFileSync('../../LICENSE', './LICENSE')\"",
    "clean": "node -e \"const fs=require('fs');['dist'].forEach(d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch(e){}})\"",
    "build:icons": "node --import tsx ./scripts/buildIcons.ts"
  },
  "devDependencies": {
    "@lucide/helpers": "workspace:*",
    "@types/node": "^22",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "sharp": "^0.33.2",
    "png-to-ico": "^2.1.8"
  },
  "engines": {
    "node": ">= 20"
  }
}
